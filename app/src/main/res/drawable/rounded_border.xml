<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with 30% opacity white -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4DFFFFFF"/> <!-- #4D is 30% opacity white -->
            <corners android:radius="16dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
            android:color="#FF000000"/> <!-- Border color, black in this example -->
            <corners android:radius="16dp"/> <!-- Match corner radius to background -->
        </shape>
    </item>
</layer-list>